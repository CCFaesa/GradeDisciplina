<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_disciplina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.dalcim.gradedisciplinas.activity.DisciplinaActivity">

    <TextView style="@style/Disciplinas.Text.Label"
        android:text="Disciplina"/>

    <EditText
        style="@style/Disciplinas.EditText.Normal"/>

    <TextView style="@style/Disciplinas.Text.Label"
        android:layout_marginTop="12dp"
        android:text="Carga Horária"/>

    <EditText
        style="@style/Disciplinas.EditText.Normal"/>

    <TextView style="@style/Disciplinas.Text.Label"
        android:layout_marginTop="12dp"
        android:text="Horários"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:textOn="Seg 1"
            android:textOff="Seg 1"/>

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:textOn="Ter 1"
            android:textOff="Ter 1"/>

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:textOn="Qua 1"
            android:textOff="Qua 1"/>

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:textOn="Qui 1"
            android:textOff="Qui 1"/>

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:layout_marginRight="0dp"
            android:textOn="Sex 1"
            android:textOff="Sex 1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#999"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:textSize="10sp"
            android:text="intervalo"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#999"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:textOn="Seg 2"
            android:textOff="Seg 2"/>

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:textOn="Ter 2"
            android:textOff="Ter 2"/>

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:textOn="Qua 2"
            android:textOff="Qua 2"/>

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:textOn="Qui 2"
            android:textOff="Qui 2"/>

        <ToggleButton
            style="@style/Disciplinas.Button.Toogle.Horario"
            android:layout_marginRight="0dp"
            android:textOn="Sex 2"
            android:textOff="Sex 2"/>
    </LinearLayout>

</LinearLayout>
