<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Disciplinas"/>
    <style name="Disciplinas.Text"/>

    <style name="Disciplinas.Text.TituloLista" parent="Disciplinas.Text">
        <item name="android:layout_marginTop">@dimen/margin_interna_card</item>
        <item name="android:layout_marginRight">@dimen/margin_interna_card</item>
        <item name="android:layout_marginLeft">@dimen/margin_interna_card</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_titulo_lista</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Disciplinas.Card" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:elevation" tools:targetApi="lollipop">3dp</item>
    </style>

</resources>
